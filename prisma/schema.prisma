generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TelegramUser {
  id                    Int                     @id
  address               String?
  feeRate               Int                     @default(5)
  WorldcoinVerification WorldcoinVerification[]
}

model WorldcoinVerification {
  id         Int           @id @default(autoincrement()) // Set id to auto-increment
  user       TelegramUser? @relation(fields: [userId], references: [id])
  userId     Int
  isVerified Boolean       @default(false)
  requestId  String        @unique
  status     String
}
